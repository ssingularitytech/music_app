<div class="flex-column">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Add Musician</h2>
    </div>
    <div class="card-body">
      <!-- Error Message -->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @musician do |f| %>
        <%= f.label :name, "Musician Name:", class: "mt-3" %>
        <%= f.text_field :name, class: "mb-2 form-control" %>
        
        <%= f.label :date_of_birth, "Date of Birth :", class: "mt-3" %>
       <%= f.date_field :dob, class: "mb-2 form-control" %>

        <%= f.label :description, "Description :", class: "mt-3" %>
        <%= f.text_field :description, class: "mb-2 form-control" %>

        <%= f.label :image, "Image :", class: "mt-3" %>
        <%= f.file_field :image, class: "mb-2 form-control" %>

        <%= f.submit "Save", class: "btn-primary border-0 rounded shadow px-5 py-2" %>
      <% end %>
    </div>
  </div>
</div>
