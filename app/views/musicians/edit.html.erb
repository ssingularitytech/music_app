<div class="flex-column">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <%# <h2 class="text-center">Musician</h2> %>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @employee do |f| %>
        <%= f.label :name, "Name :", class:"mt-3" %>
        <%= f.text_field :name, class:"mb-2 form-control" %>
        
        <%= f.label :dob, "Date of Birth :", class:"mt-3" %>
        <%= f.text_field :dob ,class:"mb-2 form-control" %>

        <%= f.label :description, "description :", class:"mt-3" %>
        <%= f.text_field :description ,class:"mb-2 form-control" %>

        <%= f.label :image, "image :", class:"mt-3" %>
        <%= f.text_field :image ,class:"mb-2 form-control" %>

        <%= f.submit "Save", class:"btn-primary border-0 rounded shadow px-4 py-2" %>
        
      <% end %>
    </div>
  </div>
</div>