
<div class="container">
 <div class="row mt-4" style="justify-content: center;">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">INSTRUMENT Form</h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @instrument do |f| %>
        <%= f.label :image, "image :", class:"mt-3" %>
         <%= f.file_field :image, class: "mb-2 form-control" %>
        
        <%= f.label :name, " Name :", class:"mt-3" %>
        <%= f.text_field :name ,class:"mb-2 form-control" %>

        <%= f.label :description, "Description :", class:"mt-3" %>
        <%= f.text_field :description ,class:"mb-2 form-control" %>

        <div class="text-center">
            <%= f.submit "Save Instrument", class:"btn-primary border-0 rounded shadow py-2 px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>