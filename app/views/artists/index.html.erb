<div class="container">
  <div class="row">
    <% @artists.each do |a| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%= image_tag a.image, class: "card-img-top", style: "height: 20rem; width: 32rem;" if a.image.attached? %>
            <h5 class="card-title"><%= a.name %></h5>
            <p class="card-text"><strong>Date of Birth:</strong> <%= a.date_of_birth %></p>
            <p class="card-text"><strong>Description:</strong> <%= a.description %></p>
            <!-- <%= button_to "Show", artist_path(a), method: :get, class: "btn btn-success btn-block" %> -->
            <%= button_to "Edit", edit_artist_path(a), method: :get, class: "btn btn-primary btn-block" %>
            <%= button_to "Delete", artist_path(a), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
    <div class=" text-center">
    <%= button_to "Add New Artist", new_artist_path, method: :get ,class:"btn-warning border-0 rounded shadow p-3 m-3" %>
  </div>
</div>
