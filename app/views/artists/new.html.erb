<div class="flex-column">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Artist Form</h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @artist do |f| %>
        <%= f.label :image, "image :", class:"mt-3" %>
         <%= f.file_field :image, class: "mb-2 form-control" %>
        
        <%= f.label :name, " Name :", class:"mt-3" %>
        <%= f.text_field :name ,class:"mb-2 form-control" %>

        <%= f.label :date_of_birth, "Date of Birth :", class:"mt-3" %>
        <%= f.date_field :date_of_birth ,class:"mb-2 form-control" %>

        <%= f.label :description, "Description :", class:"mt-3" %>
        <%= f.text_field :description ,class:"mb-2 form-control" %>

        <%= f.submit "Save Artist", class:"btn-primary border-0 rounded-pill shadow p-3" %>
      <% end %>
    </div>
  </div>
</div>