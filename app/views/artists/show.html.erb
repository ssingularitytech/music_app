<!-- Employee Details Showing -->
<div class="flex-column" style="height:100vh;">
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Artist's Details</h2>
          </div>
          <div>
            <!-- <h2><%= @artist.id %> </h2> -->
            <h2><%= image_tag url_for(@artist.image), class: "img-fluid" %> </h2>
            <h2> &#10145; Name: <%= @artist.name %> </h2>
            <h2> &#10145; Date of Birth: <%= @artist.date_of_birth %> </h2>
            <h2> &#10145; Description: <%= @artist.description %> </h2>
          </div>
          <div class="d-flex">
            <%= button_to "Edit Artist" , edit_artist_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "Delete Artist", artist_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %>
            <%= button_to "View all Artist", artists_path,method: :get ,class:"btn-primary border-0 rounded-pill shadow p-2 m-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>