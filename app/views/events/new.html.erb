
<div class="container">
 <div class="row mt-4" style="justify-content: center;">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Event Form</h2>
    </div>
    <div class="card-body">
      <!--Error Message-->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @event do |f| %>
        <%= f.label :image, "image :", class:"mt-3" %>
         <%= f.file_field :image, class: "mb-2 form-control" %>

        <%= f.label :event_date, "Date of Birth :", class:"mt-3" %>
        <%= f.date_field :event_date ,class:"mb-2 form-control text-uppercase" %>

        <%= f.label :event_name, "Event Name :", class:"mt-3" %>
        <%= f.text_field :event_name ,class:"mb-2 form-control" %>

        <%= f.label :event_location, "Event Location :", class:"mt-3" %>
        <%= f.text_field :event_location ,class:"mb-2 form-control" %>

        <div class="text-center">
            <%= f.submit "Save Event", class:"btn-primary border-0 rounded shadow py-2 px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>