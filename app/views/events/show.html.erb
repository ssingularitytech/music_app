<!-- Employee Details Showing -->
<div class="container">
<div class="flex-column" style="height:100vh;">
  <!--Error Message-->
  <% if flash[:errors] %>
    <% flash.each do |name,message| %>
      <p class="text-danger"><%= message%></p>
    <% end %>
  <% end %>
  <div class="d-flex" style="justify-content: center;">
    <div class="m-5" >
      <div class="card bg-light border-warning shadow">
        <div class="card-body">
          <div class="card-header">
            <h2 class="text-center">Event's Details</h2>
          </div>
          <div class="row d-flex">
            <!-- <h2><%= @event.id %> </h2> -->
            <div class="col-md-5">
              <h2><%= image_tag url_for(@event.image), class: "img-fluid", style: "width: 30rem; height: 20rem;" %> </h2>
            </div>
            <div class="col-md-7">
              <div class="mt-4">
              <h4><strong>Event Date:</strong> <%= @event.event_date %> </h4>
              <h4><strong>Event Name:</strong> <%= @event.event_name %> </h4>
              <h4><strong>Event Location:</strong> <%= @event.event_location %> </h4>
             </div>
            </div>
          </div>
          <div class="text-center">
            <!-- <%= button_to "Edit Event" , edit_event_path, method: :get ,class:"btn-success border-0 rounded-pill shadow p-2 m-2" %> -->
            <!-- <%= button_to "Delete Event", event_path, method: :delete ,class:"btn-danger border-0 rounded-pill shadow p-2 m-2" %> -->
            <%= button_to "View all Event", events_path,method: :get ,class:"btn-primary border-0 rounded shadow p-2 m-2 px-5" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>