
<title>artists</title>
<style>
  * {
    box-sizing: border-box;
  }

  .container{
    max-width: 1170px;
  }
  .card-container .row {
    padding-top: 1rem;
    justify-content: center;
    row-gap: 2.5rem;
    column-gap: 1rem;
  }

  .card-container .col {
    min-width: 270px;
    max-width: 360px;
  }

  .card-container .card {
    -webkit-box-shadow: 0px 3px 15px rgba(22, 41, 124, 0.1);
    box-shadow: 0px 3px 15px rgba(22, 41, 124, 0.1);
    border-radius: 0;
    border: none;
  }

  .artist_pic {
    position: relative;
    height: 300px;
  }

  .card img {
    min-width: 100%;
    max-width: 330px;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  .card-body {
    padding: 45px 20px 25px;
    text-align: start;
    height: auto;
  }

  .card-body h5 {
    font-size: 22px;
    font-weight: 700;
    color: #111111;
  }

  .card__btn {
    width: 50%;
    padding: 0.5rem 0.2rem;
    font-size: 1rem;
    text-align: center;
    background-color: white;
    border: 0.1rem solid red;
    cursor: pointer;
  }

  .read-more-btn {
    position: absolute;
    left: 0;
    bottom: -21px;
    width: 100%;
    text-align: center;
  }

  .card__btn a {
    color: #000000;
    text-decoration: none;
  }

  .card__btn:hover,
  .card__btn:active {
    background-color: #effaf6;
  }
</style>
<%= render partial: "layouts/header"%>
  <body>
    <div class="container card-container" class="w-100">
      <div class="row">
        <% @artists.each do |a| %>
        <div class="col col-lg-4 col-md-6 col-sm-6">
          <div class="card">
            <div class="artist_pic">
              <img src="<%= url_for(a.image) %>" class="card-img-top" alt="Amjad Ali Khan">
              <div class="read-more-btn">
                <!-- <button class="card__btn"><a href="artist_path(a)">Read More.. </a></button> -->
                <%= button_to "Read More..", artist_path(a), method: :get, class: "px-4 py-1 card__btn" %>
              </div>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= a.name %></h5>
              <h5><%= a.date_of_birth %></h5>
              <p class="card-text"><%= a.description %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <div class=" text-center">
        <%= button_to "Add New Artist", new_artist_path, method: :get ,class:"btn-warning border-0 rounded shadow p-3 m-3" %>
      </div>
    </div>
  </body>


  




