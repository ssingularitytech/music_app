
<%= render partial: "layouts/header" %>
<div class="container" style="margin-top: 10rem;">
  <div class="row justify-content-center">
    <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Edit Artist</h2>
    </div>
    <div class="card-body">
      <!-- Error Message -->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @artist do |f| %>
        <!-- Image -->
        <% if @artist.image.attached? %>
          <%= image_tag @artist.image, class: "card-img-top", style: "height: 20rem; width: 100%;" %>
        <% end %>
        <br>
        <!-- Artist Name -->
        <%= f.label :name, "Artist Name :", class: "mt-3" %>
        <%= f.text_field :name, placeholder: "Enter Artist's Name", class: "mb-2 form-control" %>
        <!-- Date of Birth -->
        <%= f.label :date_of_birth, "Date of Birth :", class: "mt-3" %>
        <%= f.date_field :date_of_birth, placeholder: "Enter Date of Birth", class: "mb-2 form-control" %>
        <!-- Description -->
        <%= f.label :description, "Description :", class: "mt-3" %>
        <%= f.text_field :description, placeholder: "Enter Description", class: "mb-2 form-control" %>
        <!-- Submit Button -->
        <div class="button text-center">
            <%= f.submit "Save Artist", class: "btn-primary border-0 rounded shadow p-2 text-center px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
